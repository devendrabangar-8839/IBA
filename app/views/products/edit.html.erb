<%= form_for @product do |f| %>
  
  <div class="form-group">
    <%= f.label :brand_id %>
    <%= f.collection_select :brand_id, @brands, :last, :first, { prompt: "Select Brand" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :brand_segment_id %>
    <%= f.collection_select :brand_segment_id, @segments, :last, :first, { prompt: "Select Segment" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :model_no %>
    <%= f.text_field :model_no, value: @product.model_no, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :product_detail %>
    <%= f.text_field :product_detail, value: @product.product_detail, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :warranty_details %>
    <%= f.text_field :warranty_details, value: @product.warranty_details, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, value: @product.price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :review_video_link %>
    <%= f.text_field :review_video_link, value: @product.review_video_link, class: "form-control" %>
  </div>
  <!-- Add other form fields as needed -->

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>
