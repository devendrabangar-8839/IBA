<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add New Brand</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: create_brand_path, method: :post) do |form| %>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Add Brand Name</label>
            <%= form.text_field :brand_name, {class: "form-control", id: "exampleFormControlTextarea1"} %>
          </div>
          <div class="modal-footer">
              <%= form.button "Submit", class: "btn btn-primary", type: "submit" %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>